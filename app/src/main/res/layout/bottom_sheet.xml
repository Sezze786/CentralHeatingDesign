<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/bottomSheetBackground"
    android:padding="@dimen/activity_vertical_margin"
    app:behavior_peekHeight="80dp"
    app:layout_behavior="@string/bottom_sheet_behavior">


    <TextView
        android:id="@+id/bottomSheetHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/expand_me"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <LinearLayout
        android:id="@+id/boilerField"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_below="@id/bottomSheetHeading"
        android:background="@drawable/action_button"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/boilerImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/boiler" />

        <TextView
            android:id="@+id/boilerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/boiler"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/radiatorField"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_below="@id/bottomSheetHeading"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/boilerField"
        android:background="@drawable/action_button"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/radiatorImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/radiator" />

        <TextView
            android:id="@+id/radiatorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/radiator"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/horizontalLineField"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_below="@id/boilerField"
        android:layout_marginTop="5dp"
        android:background="@drawable/action_button"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/horizontalLineImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/horizontal_line" />

        <TextView
            android:id="@+id/horizontalLineText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/horizontal_line"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/verticalLineField"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_below="@id/boilerField"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/horizontalLineField"
        android:background="@drawable/action_button"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/verticalLineImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/vertical_line" />

        <TextView
            android:id="@+id/verticalLineText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/horizontal_line"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/constraintCheckerField"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_below="@id/boilerField"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/verticalLineField"
        android:background="@drawable/action_button"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/constraintCheckerImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/circle_red" />

        <TextView
            android:id="@+id/constraintCheckerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/constraint_checker"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF" />
    </LinearLayout>


</RelativeLayout>